<div class="container">
  <%= simple_form_for([:admin, @admin_employee]) do |f| %>
      <div class="form-group">
        <%= f.input :name, label: "Employee Name", input_html: { class: "form-control" } %>
      </div>
      <div class="form-group">
        <%= f.label :department_id, "Department" %>
        <%= f.collection_select :department_id, Department.all, :id, :name, { include_blank: true }, {class: "form-control"} %>
      </div>
      <div class="form-group">
        <%= f.input :image, as: :file, label: "Image upload", input_html: { class: "form-control-file" } %>
      </div>

      <%= f.button :submit, "Create Employee", class: "btn btn-primary" %>
  <% end %>
</div>
