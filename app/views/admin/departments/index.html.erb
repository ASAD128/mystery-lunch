<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Admin Departments</h1>

  <table class="table">
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @admin_departments.each do |admin_department| %>
        <tr>
          <td><%= admin_department.name %></td>
          <td><%= link_to 'Edit', edit_admin_department_path(admin_department) %></td>
          <td>
          <%= simple_form_for([:admin, admin_department], method: :delete) do |f| %>
              <%= f.button :submit, "Delete Department", class: "btn btn-primary" %>
          <% end %>
          <td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Admin Department', new_admin_department_path, class: "btn btn-primary" %>
</div>